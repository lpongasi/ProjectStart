<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WebApp</title>
    <base href="~/" />
    <environment exclude="Development">
        <link href="~/assets/common.bundle.css" rel="stylesheet" />
    </environment>
</head>
<body>
    @RenderBody()
    <environment exclude="Development">
        <script src="~/assets/common.bundle.js"></script>
    </environment>
    <environment include="Development">
        <script src="http://localhost:9000/common.bundle.js"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>
</html>
