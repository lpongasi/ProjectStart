{
  "compileOnSave": true,
  "files": [
    "Configs/global.ts",
    "Configs/webpack.ts",
    "webpack.config.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": false,
    "noEmitOnError": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "lib": [ "es6", "dom" ]
  },
  "exclude": [
    "bin",
    "node_modules"
  ]
}